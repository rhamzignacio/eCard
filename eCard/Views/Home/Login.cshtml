@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" ng-app="login">
<head>
    <meta charset="UTF-8">
    <title>e-Card | Login</title>

    <link rel="stylesheet" href="~/Content/angular-growl.min.css" />
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css" />


</head>

<body ng-controller="loginController as vm">
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>
    <div growl class="fading"></div>
    <div class="form">
        <div class="forceColor"></div>
        <div class="topbar">
            <div class="spanColor"></div>
            <input type="text" class="input" id="username" placeholder="Username" ng-model="vm.Username">
            <input type="password" class="input" id="password" placeholder="Password" ng-model="vm.Password" />
        </div>
        <button class="submit" id="submit" ng-click="TryLogin(vm.Username, vm.Password)">Login</button>        
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    @Scripts.Render("~/bundles/angular")
</body>
</html>
