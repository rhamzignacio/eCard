<!DOCTYPE html>

<html lang="en" ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>e-Card</title>


    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/agency.css" rel="stylesheet" />
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/angular-growl.min.css" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body id="page-top" ng-controller="">
    <div growl class="fading"></div>

    <section id="user" ng-init="init()">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3 class="section-heading">User Accounts</h3>
                    <h3 class="section-subheading text-muted">All user accounts</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <table id="userTable" style="width:100%; font-size:10pt">
                        <tr>
                            <th>
                                <button class="btn btn-success btn-sm">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </th>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Department</th>
                            <th>Type</th>
                            <th>Status</th>
                        </tr>

                        <tr ng-repeat="u in vm.Users">
                            <td>
                                <button class="btn btn-info btn-sm">
                                    <i class="fa fa-pencil"></i></button>

                                <button class="btn btn-danger btn-sm">
                                    <i class="fa fa-lock" ng-show="u.Status === 'Y'"></i>
                                    <i class="fa fa-unlock" ng-show="u.Status === 'N'"></i>
                                </button>
                            </td>
                            <td>{{u.Firstname}} {{u.LastName}}</td>
                            <td>{{u.Username}}</td>
                            <td>{{u.Department}}</td>
                            <td>{{u.Type}}</td>
                            <td>{{u.ShowStatus}}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
